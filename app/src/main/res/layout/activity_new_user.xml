<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yankees_blue"
    tools:context=".NewUser">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_greeting"
        android:textColor="#FAFAFA"
        android:textSize="50sp"
        app:fontFamily="@font/poppins_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_yonder_round"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30sp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/user" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:autofillHints="Name"
                android:background="@drawable/eggshell_round"
                android:ems="10"
                android:hint="JaneDoe"
                android:textColorHint="#C4C2C2"
                android:inputType="text"
                android:textColor="#6F6F6F"
                android:textSize="15sp"
                app:fontFamily="@font/poppins_black" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="In app name: 6-20 characters only"
            android:textColor="#FAFAFA"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_black" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20sp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/mail" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editTextTextEmailAddress3"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:autofillHints="emailAddress"
                android:background="@drawable/eggshell_round"
                android:ems="10"
                android:hint="Email"
                android:textColorHint="#C4C2C2"
                android:inputType="textEmailAddress"
                android:textColor="#6F6F6F"
                android:textSize="15sp"
                app:fontFamily="@font/poppins_black" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="your.email@somewhere.com"
            android:textColor="#FAFAFA"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20sp" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/lock" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:autofillHints="Password, 6-20 characters including 1 number"
                android:background="@drawable/eggshell_round"
                android:ems="10"
                android:hint="Password"
                android:textColorHint="#C4C2C2"
                android:inputType="textPassword"
                android:textColor="#6F6F6F"
                android:textSize="15sp"
                app:fontFamily="@font/poppins_black" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="6-20 characters, at least one number"
            android:textColor="#FAFAFA"
            android:textSize="12sp"
            app:fontFamily="@font/poppins_black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            android:text="Create Account"
            android:textColor="#FAFAFA"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-OR-"
            android:textColor="#FAFAFA"
            android:textSize="20sp"
            app:fontFamily="@font/poppins_black" />

        <Button
            android:id="@+id/button2"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:drawableLeft="@drawable/google"
            android:text="Sign-Up With Google"
            android:textColor="#000000" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already registered? Sign in!"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:fontFamily="@font/poppins_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.964" />

</androidx.constraintlayout.widget.ConstraintLayout>